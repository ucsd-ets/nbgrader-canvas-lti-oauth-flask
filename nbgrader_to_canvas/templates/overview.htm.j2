{% extends 'base.htm.j2' %}

{%- block head -%}

  <script>
  var base_url = "{{ base_url }}";
  </script>

  <style> 
    select {
        text-align-last:center;
    }
  </style> 

{%- endblock -%}


{%- block title -%}
Grading Overview
{%- endblock -%}


{%- block sidebar -%}
<li role="presentation" class="active"><a href="{{ base_url }}/grade_overview">Grading Overview</a></li>
<li role="presentation"><a href="{{ base_url }}/grade_assignments">Grade Assignments</a></li>
<li role="presentation"><a href="{{ base_url }}/grade_students">Grade Students</a></li>
{%- endblock -%}


{%- block breadcrumbs -%}
<ol class="breadcrumbs">
  <li class="active">Overview</li>
</ol>
{%- endblock -%}
        {%- block messages -%}
        {%- endblock -%}
        <table class="table table-hover">
          <thead>
            {%- block table_header -%}
            <tr>
              <th class="text-center">Nbgrader Assignment</th>
              <th class="text-center">Canvas Assignment</th>
              <th class="text-center">Canvas Status</th>
            </tr>
            {%- endblock -%}
          </thead>
          <tbody id="main-table">
            {%- block table_body -%}
              {% for assignment in nbgrader['assign_list'] %}
              <tr>
                <td class="text-center">{{assignment.name}}</td>
                <td class="text-center">
                  <select name="canvas_assign"> 
                  <option value="create">Create Assignment in Canvas </option>
                  </select>
                </td>
                <td class="text-center" style="color:red">Assignment not found in Canvas</td>

              </tr>
              {% endfor %}
            {%- endblock -%}
          </tbody>
          <tfoot>
            {%- block table_footer -%}
              <tr>
                  <td colspan="3"></td>
              </tr>
            {%- endblock -%}
          </tfoot>
        </table>
        {%- endblock -%}
      </div>
    </div>
  </div>
  {%- block script -%}
  {%- endblock -%}
