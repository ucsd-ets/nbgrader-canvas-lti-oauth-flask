{%- extends 'base.htm.j2' -%}

<!-- Scripts for assignments page -->
{%- block head -%}

  <!-- Allows for checking all checkboxes -->
  <script language="JavaScript">
  function toggle(source) {
      checkboxes = document.getElementsByName('assignments');
      for(var i=0, n=checkboxes.length;i<n;i++) {
          checkboxes[i].checked = source.checked; 
      }
  }
  </script>

  <!-- Formatting for assignments page -->
  <script src="{{ base_url }}/formgrader/static/js/manage_assignments.js"></script>

{%- endblock -%}

<!-- Title of page -->
{%- block title -%}
Grade Assignments
{%- endblock -%}

<!-- Display sidebar with highlighting for current section -->
{%- block sidebar -%}
    <li role="presentation"><a href="{{ base_url }}/grade_overview">Grading Overview</a></li>
    <li role="presentation" class="active"><a href="{{ base_url }}/grade_assignments">Grade Assignments</a></li>
    <li role="presentation"><a href="{{ base_url }}/grade_students">Grade Students</a></li>
{%- endblock -%}

<!-- Create bar across page -->
{%- block breadcrumbs -%}
<ol class="breadcrumb">
  <li class="active">Post Grades to Canvas</li>
</ol>
{%- endblock -%}

<!-- Block for messages (if needed) -->
{%- block messages -%}

{%- endblock -%}

<!--
  Create the header with 'select-all' checkbox, name, due date, and # submissions
-->
{%- block table_header -%}
<tr>
  <th><input type="checkbox" id="assignment_header" onClick="toggle(this)" /></th>
  <th class="text-center">Name</th>
  <th class="text-center">Due Date</th>
  <th class="text-center"># Submissions</th>
</tr>
{%- endblock -%}

<!--
  Create rows in the table.
  Each row contains a checkbox, assignment name, and due date
-->
{%- block table_body -%}
    {% for i in range(1, 4) %}
        <tr>
            <td><input type="checkbox" name="assignments" id="assignment{{i}}""></td>
            <td class="text-center">Assignment {{i}}</td>
            <td class="text-center">3/{{i}}/2021</td>
            <td class="text-center">{{i*3}}</td>
        </tr>
    {% endfor %}
{%- endblock -%}

<!-- Final line under all rows -->
{%- block table_footer -%}
  <tr>
    <td colspan="4"></td>
  </tr>
{%- endblock -%}